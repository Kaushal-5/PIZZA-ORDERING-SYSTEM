                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_cheesypizza_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹450"
                    android:textColor="#FFD700"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp">

                <Button
                    android:id="@+id/btn_cheesypizza_minus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="-"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:backgroundTint="#FF6B35" />

                <TextView
                    android:id="@+id/tv_cheesypizza_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:minWidth="40dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="12dp" />

                <Button
                    android:id="@+id/btn_cheesypizza_plus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cheesypizza_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:minWidth="80dp"
                android:gravity="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Italian Pizza Item -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_italian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
